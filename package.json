{
  "name": "vue-starter",
  "version": "0.0.1",
  "description": "Basic starter vue app",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "echo 'No tests implemented'",
    "clean": "rimraf dist",
    "build": "npm run type-check && npm run clean && vite build",
    "preview": "vite preview",
    "start": "vite",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "eslint": "eslint src --color --cache",
    "eslint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check *.{js,ts,tsx,json,scss,css,md,vue}",
    "prettier:write": "prettier --write *.{js,ts,tsx,json,scss,css,md,vue}",
    "serve": "http-server dist --port 80"
  },
  "author": "Peet Janse van Vuuren",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "18",
    "@types/node": "18",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^9.17.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.66.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  }
}
